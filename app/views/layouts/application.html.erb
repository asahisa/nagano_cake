<!DOCTYPE html>
<html>
  <head>
    <!-- FontAwesome -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <title>NaganoCake</title>
  </head>

  <body>
    <% if customer_signed_in? %>
      <!-- 共通テンプレート current_customer -->
      <%= render "layouts/customer.html.erb"%>
    <% else %>
      <!-- 共通テンプレート guest -->
      <%= render "layouts/guest.html.erb"%>
    <% end %>
    
    <main>
      <!-- 共通テンプレート フラッシュメッセージ -->
      <%= render "layouts/flash_message"%>

      <%= yield %>
    </main>

    <footer>
      <div class="container-fluid mt-5">
        <div class="row">
          <p class="bg-secondary d-flex align-items-center justify-content-center" style="height: 50px;">
              <span class="text-white">CopyRight Infratop.inc</span>
          </p>
        </div>
      </div>
    </footer>
  </body>

</html>
