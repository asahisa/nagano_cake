<div class="container">
  <div class="row mt-4">
    <div class="col-8">
      <h4 class="col-2 ms-5">マイページ</h4>


      <div class="row mt-4  justify-content-start">
        <h4 class="col-2">登録情報</h4>
        <div class="col-8 actions">
          <%= link_to "編集する", edit_customer_registration_path ,class: "col-2 btn btn-success btn-sm btn-block sign_up" %>
        </div>
      </div>

        <table class="mt-3 table table-bordered border-dark justify-content-start">
          <tbody>
            <tr>
              <th class="table-active" scope="row">氏名</th>
              <td>
                <%= current_customer.first_name %>　<%= current_customer.last_name %>
              </td>
            </tr>

            <tr>
              <th class="table-active" scope="row">カナ</th>
              <td>
                <%= current_customer.first_name_kana %>　<%= current_customer.last_name_kana %>
              </td>
            </tr>

            <tr>
              <th class="table-active" scope="row">郵便番号</th>
              <td>
                <%= current_customer.postal_code %>
              </td>
            </tr>

            <tr>
              <th class="table-active" scope="row">住所</th>
              <td>
                <%= current_customer.address %>
              </td>
            </tr>

            <tr>
              <th class="table-active" scope="row">電話番号</th>
              <td>
                <%= current_customer.telephone_number %>
              </td>
            </tr>

            <tr>
              <th class="table-active" scope="row">メールアドレス</th>
              <td>
                <%= current_customer.email %>
              </td>
            </tr>
          </tbody>
        </table>


      <!--<div class="row mt-5  justify-content-start">-->
      <!--  <h4 class="col-2">配送先</h4>-->
      <!--  <div class="col-8 actions">-->
      <!--    < %= link_to "一覧を見る", addresses_path ,class: "col-2 btn btn-primary btn-sm btn-block sign_up" %>-->
      <!--  </div>-->
      <!--</div>-->

      <div class="row mt-3 justify-content-start">
        <h4 class="col-2">注文履歴</h4>
        <div class="col-8 actions">
          <%= link_to "一覧を見る", orders_path ,class: "col-2 btn btn-primary btn-sm btn-block sign_up" %>
        </div>
      </div>

    </div>
  </div>
</div>