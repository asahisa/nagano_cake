<div class="container">
  <div class="row mt-4">
    <div class="col-8 cols-1">
      <h4 class="col ms-5">会員情報編集</h4>
    
      <%= form_with model: @customer, url: customer_registration_path, class: "row d-flex justify-content-start" do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
      
        <!-- 名前入力フォーム -->
        <div class="row mt-5">
          <label class="col-3">名前</label>

          <span class="col-1">(姓)</span>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "field col p-0" %>

          <span class="col-1 offset-1">(名)</span>
          <%= f.text_field :last_name, autocomplete: "last_name", class: "field col p-0" %>
        </div>
        
        <!-- フリガナ入力フォーム -->
        <div class="row  mt-3">
          <label class="col-3">フリガナ</label>

          <span class="col-1">(セイ)</span>
          <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", class: "field col p-0" %>
  
          <span class="col-1 offset-1">(メイ)</span>
          <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", class: "field col p-0" %>
        </div>

        <!-- 郵便番号入力フォーム -->
        <div class="row mt-3">
          <span class="col-4">郵便番号 (ハイフン無し)</span>
          <%= f.text_field :postal_code, autocomplete: "postal_code", class: "col-3 p-0" %>
        </div>

        <!-- 住所入力フォーム -->
        <div class="row mt-3">
          <span class="col-4">住所</span>
          <%= f.text_field :address, autocomplete: "address", class: "col-8 p-0" %>
        </div>

        <!-- 電話番号入力フォーム -->
        <div class="row mt-3">
          <span class="col-4">電話番号 (ハイフン無し)</span>
          <%= f.text_field :telephone_number, autocomplete: "telephone_number", class: "col-3 p-0" %>
        </div>

        <!-- メールアドレス入力フォーム -->
        <div class="row mt-3">
          <label class="col-4 ">メールアドレス</label>
          <%= f.email_field :email, autocomplete: "email", class: "col-3 p-0" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="row">
          <div class="actions col-4 offset-4">
            <%= f.submit "編集内容を保存", class: "mt-3 px-5 btn btn-success btn-sm btn-block" %>
          </div>
          
          <div class="actions col-4">
            <%= link_to "退会する", confrm_customer_path, class: "mt-3 px-3 btn btn-danger btn-sm btn-block" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>